<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>HeiMaShop</display-name>
  <welcome-file-list>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>AutoLoginFilter</filter-name>
    <filter-class>com.itheima.filter.AutoLoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AutoLoginFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>ReginServlet</servlet-name>
    <servlet-class>com.itheima.web.ReginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReginServlet</servlet-name>
    <url-pattern>/reginServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ActiveServlet</servlet-name>
    <servlet-class>com.itheima.web.ActiveServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ActiveServlet</servlet-name>
    <url-pattern>/active</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ChekUsernameServlet</servlet-name>
    <servlet-class>com.itheima.web.ChekUsernameServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ChekUsernameServlet</servlet-name>
    <url-pattern>/chekUsernameServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>PrdocutServlet</servlet-name>
    <servlet-class>com.itheima.web.PrdocutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PrdocutServlet</servlet-name>
    <url-pattern>/prdocutServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UserLoginServlet</servlet-name>
    <servlet-class>com.itheima.web.UserLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserLoginServlet</servlet-name>
    <url-pattern>/userLoginServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CallbackServlet</servlet-name>
    <servlet-class>com.itheima.web.CallbackServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CallbackServlet</servlet-name>
    <url-pattern>/callbackServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AdminServlet</servlet-name>
    <servlet-class>com.itheima.web.AdminServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminServlet</servlet-name>
    <url-pattern>/adminServlet</url-pattern>
  </servlet-mapping>
</web-app>